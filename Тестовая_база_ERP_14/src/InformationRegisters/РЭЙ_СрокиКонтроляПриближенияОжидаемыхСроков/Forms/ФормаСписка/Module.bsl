		ПолеОформления.Поле = Новый ПолеКомпоновкиДанных("Дни");
		Отбор = ЭлементУсловногоОформления.Отбор.Элементы.Добавить(Тип("ЭлементОтбораКомпоновкиДанных"));
		Отбор.ЛевоеЗначение = Новый ПолеКомпоновкиДанных("Дни");
		Отбор.ВидСравнения = ВидСравненияКомпоновкиДанных.Равно;
		Отбор.ПравоеЗначение = т;
		ЭлементУсловногоОформления.Оформление.УстановитьЗначениеПараметра("Текст", РЭЙ_СлужебныйСервер.ПредставлениеДни(т));
