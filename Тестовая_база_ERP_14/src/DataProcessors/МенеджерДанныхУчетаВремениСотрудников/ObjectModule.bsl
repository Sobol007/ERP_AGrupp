	ОписаниеОтбора = Новый Структура;
	
	ОписаниеОтбора.Вставить("ЛевоеЗначение", "");
	ОписаниеОтбора.Вставить("ПравоеЗначение", "");
	ОписаниеОтбора.Вставить("ПараметрПравоеЗначение", Неопределено);
	
	Возврат ОписаниеОтбора;
КонецФункции	

