			|	" + ПсевдонимТаблицы + "." + Поле;
		КонецЦикла;	
		
		ТекстКолючевыеПоля = Сред(ТекстКолючевыеПоля, 2);
		
		ТекстЗапроса = СтрЗаменить(ТекстЗапроса, ПсевдонимТаблицы + ".КлючевыеПоля КАК КлючевыеПоля", ТекстКолючевыеПоля);
