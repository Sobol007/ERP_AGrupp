	Если ТекущееИмяВТ = Неопределено Тогда
		НовоеИмяВТ = ПсевдонимТаблицы;	
	ИначеЕсли Прав(ТекущееИмяВТ, 3) = "Доп" Тогда
		НовоеИмяВТ = Сред(ТекущееИмяВТ, 1, СтрДлина(ТекущееИмяВТ) - 3);
	Иначе 
		НовоеИмяВТ = ТекущееИмяВТ + "Доп";
	КонецЕсли;	
	
	Возврат НовоеИмяВТ;
