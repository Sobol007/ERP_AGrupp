							МенеджерЗаписи.Записать();
						КонецЕсли;
					КонецЕсли;
				КонецЕсли;
				
				ПервыйТелефон = "";
				ПервыйТелефонПредставление = "";
	
				ОсновнойТелефон = "";
				ОсновнойТелефонПредставление = "";
				
				ПредыдущийКонтакт = Выборка.Ссылка;
			КонецЕсли;
			
			Если НЕ ЗначениеЗаполнено(ПервыйТелефон) Тогда
