		ДобавитьЗначение(ЗапросТовары, "priceCurrencyCode",   КодВалюты);
		ДобавитьЗначение(ЗапросТовары, "demandedUnitsNumber", СтрокаТовары.Количество);
		ДобавитьЗначение(ЗапросТовары, "unitOkeiCode",
