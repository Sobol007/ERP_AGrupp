Процедура ПолучитьСохраненныеДанныеПоискаНоменклатурыСервиса(ТаблицаПоиска, Штрихкоды)
	
	// &ЗамерПроизводительности
	ОписаниеЗамера = ОценкаПроизводительности.НачатьЗамерДлительнойОперации("ОбщийМодуль.ТорговыеПредложенияСлужебный.ПолучитьСохраненныеДанныеПоискаНоменклатурыСервиса");

	// Получение ранее сохраненных данных.
	Запрос = Новый Запрос;
	Запрос.Текст =
	"ВЫБРАТЬ
	|	СоответствиеПоискаРаботаСНоменклатурой.Номенклатура КАК Номенклатура,
	|	СоответствиеПоискаРаботаСНоменклатурой.Характеристика КАК Характеристика
	|ИЗ
	|	РегистрСведений.СоответствиеПоискаРаботаСНоменклатурой КАК СоответствиеПоискаРаботаСНоменклатурой
	|ГДЕ
	|	НЕ СоответствиеПоискаРаботаСНоменклатурой.Подтверждено";
	
	ТаблицаПоиска = Запрос.Выполнить().Выгрузить();
	ТаблицаПоиска.Индексы.Добавить("Номенклатура, Характеристика");
	ТаблицаПоиска.Колонки.Добавить("Актуально", Новый ОписаниеТипов("Булево"));
	ТаблицаПоиска.Колонки.Добавить("НоваяЗапись", Новый ОписаниеТипов("Булево"));
	
	// Получение несопоставленной номенклатуры.
	Запрос = Новый Запрос;
	ИнициализироватьПараметрыЗапросаПубликуемыхТоваров(Запрос.Параметры);
	ТорговыеПредложенияПереопределяемый.ИнициализацияЗапросаПубликуемыхТоваров(Запрос);
	
	// Дополнение служебными данными.
	ДополнитьЗапросСлужебнымиТаблицами(Запрос);

	РезультирующиеТаблицы = Новый Структура("ТоварыСлужебный, Штрихкоды");
	УдаляемыеТаблицы = Новый Структура("СвойстваСлужебный");
	ПреобразоватьЗапросПоВременнымТаблицам(Запрос, РезультирующиеТаблицы, УдаляемыеТаблицы, Ложь);
	РезультатПакетаЗапросов = Запрос.ВыполнитьПакет();
	
	// Получение результатов пакетного запроса в массиве.
	Выборка = РезультатПакетаЗапросов[РезультирующиеТаблицы.ТоварыСлужебный].Выбрать();
	Пока Выборка.Следующий() Цикл
		
		Если ЗначениеЗаполнено(Выборка.ИдентификаторНоменклатурыСервиса) Тогда
			Продолжить;
		КонецЕсли;
		
		НайденныеСтроки = ТаблицаПоиска.НайтиСтроки(Новый Структура("Номенклатура, Характеристика",
			Выборка.Номенклатура, Выборка.Характеристика));
		Если НайденныеСтроки.Количество() <> 0 Тогда
			Для каждого ЭлементКоллекции Из НайденныеСтроки Цикл
				ЭлементКоллекции.Актуально = Истина;
			КонецЦикла;
		Иначе
			НоваяСтрока = ТаблицаПоиска.Добавить();
			ЗаполнитьЗначенияСвойств(НоваяСтрока, Выборка);
			НоваяСтрока.НоваяЗапись = Истина;
		КонецЕсли;
		
	КонецЦикла;
	
	Штрихкоды = РезультатПакетаЗапросов[РезультирующиеТаблицы.Штрихкоды].Выгрузить();
	Штрихкоды.Индексы.Добавить("Значение");
	
	КоличествоДанных = Выборка.Количество() + Штрихкоды.Количество();
	ОценкаПроизводительности.ЗакончитьЗамерДлительнойОперации(ОписаниеЗамера, КоличествоДанных/1000);
	
КонецПроцедуры

