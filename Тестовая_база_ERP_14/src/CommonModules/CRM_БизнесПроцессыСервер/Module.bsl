	Иначе
		ТекстСообщения = НСтр("ru='Отсутствуют исполнители этапов карты маршрута бизнес-процесса!';en='There was executors of stages of a route map of business process!'");		
		ОбщегоНазначенияКлиентСервер.СообщитьПользователю(ТекстСообщения);
	КонецЕсли;
