			Продолжить;
		КонецЕсли;
		
		НомерТаблицы = НомерТаблицы + 1;
		ИмяТаблицы   = "Т" + Формат(НомерТаблицы, "ЧЦ=3; ЧВН=") + "_" + ВременнаяТаблица.ПолноеИмя;
