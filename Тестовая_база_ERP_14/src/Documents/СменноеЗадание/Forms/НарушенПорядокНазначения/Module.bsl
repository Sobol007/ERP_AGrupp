&НаКлиенте
Процедура Исключить(Команда)
	
	Отказ = Ложь;
	
	Попытка
		
		ИсключитьНаСервере();
		
	Исключение
		
		Отказ = Истина;
		
	    ПоказатьПредупреждение(,
			НСтр("ru = 'Операция не может быть выполнена по причине:';
				|en = 'The operation cannot be executed due to:'")
			+ Символы.ПС
			+ КраткоеПредставлениеОшибки(ИнформацияОбОшибке()));
		
	КонецПопытки;
	
	Если НЕ Отказ Тогда
		Закрыть(Истина);
	КонецЕсли;
	
КонецПроцедуры

